# ChatDB 环境配置

# ==================== API 配置 ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# ==================== LLM 配置 ====================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# 默认 LLM 提供商 (openai / anthropic)
DEFAULT_LLM_PROVIDER=openai

# ==================== 数据库配置 ====================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=chatdb

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=chatdb

# SQLite
SQLITE_DATABASE=./data/chatdb.db

# 默认数据库类型 (postgresql / mysql / sqlite)
DEFAULT_DB_TYPE=postgresql

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/chatdb.log

# DuckDB
DUCKDB_DATABASE=./data/chatdb.duckdb

# Excel (通过 DuckDB 读取)
# EXCEL_FILE_PATH=./data/sample.xlsx
# EXCEL_SHEET_NAME=Sheet1
